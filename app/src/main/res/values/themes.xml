<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_600</item>
        <item name="colorPrimaryVariant">@color/light_blue_900</item>
        <item name="colorOnPrimary">@color/light_blue_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_A200</item>
        <item name="colorSecondaryVariant">@color/light_blue_A400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Clap.Fullscreen" parent="Theme.Clap">
        <item name="android:actionBarStyle">@style/Widget.Theme.Clap.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Clap.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>